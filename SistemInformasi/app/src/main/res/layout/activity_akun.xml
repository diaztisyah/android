<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".App.AkunActivity"
    android:background="#4c96d7">

    <Button
        android:id="@+id/btn_kembali"
        android:layout_width="41dp"
        android:layout_height="33dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_reply_black_24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/text2"
        app:layout_constraintHorizontal_bias="0.019"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/bold"
        android:text="Akun"
        android:textColor="#FFFFFF"
        android:textSize="35dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_hapus_akun"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_hapus_akun"
        android:layout_width="387dp"
        android:layout_height="58dp"
        android:layout_marginTop="150dp"
        android:background="@drawable/tombol4"
        android:text="Hapus Akun"
        android:fontFamily="@font/bold"
        android:textColor="#4c96d7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_logout_akun"
        android:layout_width="387dp"
        android:layout_height="58dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/tombol4"
        android:text="Logout"
        android:fontFamily="@font/bold"
        android:textColor="#4c96d7"
        app:layout_constraintEnd_toEndOf="@+id/btn_hapus_akun"
        app:layout_constraintStart_toStartOf="@+id/btn_hapus_akun"
        app:layout_constraintTop_toBottomOf="@+id/btn_hapus_akun" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/splash"
        app:layout_constraintBottom_toTopOf="@+id/email_edittext_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_logout_akun" />


</androidx.constraintlayout.widget.ConstraintLayout>